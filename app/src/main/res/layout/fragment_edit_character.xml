<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCharacterFragment">

    <Button
        android:id="@+id/editCharacterOKButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCharHP"
        app:layout_constraintVertical_bias="0.81" />

    <TextView
        android:id="@+id/editCharacterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Character"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/currentLevel"
        android:layout_width="62dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Level"
        app:layout_constraintStart_toEndOf="@+id/editCharLevel"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/editCharLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Base Level "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/baseHP"
        android:layout_width="62dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="text"
        android:text="HP"
        app:layout_constraintTop_toBottomOf="@+id/currentLevel"
        tools:layout_editor_absoluteX="97dp" />

    <TextView
        android:id="@+id/editCharHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Base HP "
        app:layout_constraintEnd_toStartOf="@+id/baseHP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Character <NAME>"
        app:layout_constraintTop_toBottomOf="@+id/editCharacterLabel"
        tools:layout_editor_absoluteX="13dp" />

    <Button
        android:id="@+id/editCharacterDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/editCharacterOKButton"
        app:layout_constraintTop_toBottomOf="@+id/baseHP"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>