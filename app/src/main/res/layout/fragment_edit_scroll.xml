<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditScrollFragment">

    <Button
        android:id="@+id/editScrollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/magicGrowthRate"
        app:layout_constraintVertical_bias="0.799" />

    <TextView
        android:id="@+id/editScrollLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Scroll"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hpGrowthRate"
        android:layout_width="62dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="text"
        android:text="HP"
        app:layout_constraintStart_toEndOf="@+id/HPGrowthText"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/HPGrowthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="HP Growth Rate "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/magicGrowthRate"
        android:layout_width="62dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="text"
        android:text="MG"
        app:layout_constraintTop_toBottomOf="@+id/hpGrowthRate"
        tools:layout_editor_absoluteX="108dp" />

    <TextView
        android:id="@+id/magicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Base HP "
        app:layout_constraintEnd_toStartOf="@+id/magicGrowthRate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Scroll <NAME>"
        app:layout_constraintTop_toBottomOf="@+id/editScrollLabel"
        tools:layout_editor_absoluteX="13dp" />

    <Button
        android:id="@+id/editScrollDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editScrollButton"
        app:layout_constraintTop_toBottomOf="@+id/magicGrowthRate"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>